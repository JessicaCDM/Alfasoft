@model ContactModel
@{
    ViewData["Title"] = "Details Contact";
}

<div style="width: 40%; margin-left:30%"> 
    <h3 class="text-center">Detalhe do Contacto</h3>

    <div class="card">
        <div class="card-body">
            <p>ID : <strong> @Model.Id </strong></p>
            <p>Nome : <strong> @Model.Name </strong></p>
            <p>Telefone : <strong> @Model.Phone </strong></p>
            <p>E-mail : <strong> @Model.Email </strong></p>
        </div>
        <a class="btn btn-outline-secondary d-block" asp-controller="Contact" asp-action="Index">Voltar</a>
    </div>
</div>